<% provide(:title, 'Sign up') %>
<h1>Sign Up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, url: signup_path) do |i| %>
      <%= render 'shared/error_messages' %>
    
      <%= i.label :name %>
      <%= i.text_field :name, class: 'form-control' %>
      
      <%= i.label :email %>
      <%= i.email_field :email, class: 'form-control' %>
      
      <%= i.label :password %>
      <%= i.password_field :password, class: 'form-control' %>
      
      <%= i.label :password_confirmation %>
      <%= i.password_field :password_confirmation, class: 'form-control' %>
      
      <%= i.submit "Create my account", class: "btn btn-primary" %>
    <% end %>    
  </div>
</div>
